<div class="mobile-content-wrapper">
  <div class='navbar'>
    <h1>Ramen, Ho!</h1>
  </div>
  <div class="restaurants-wrapper">
      <% @restaurants.each do |restaurant| %>
      <div class="restaurant-tab-container">
        <div id='restaurant-<%=restaurant.id %>' class='restaurant-tab'>
          <p class="restaurant-name"><%= restaurant.name %></p>
          <p class="waittime-display">
            <% if restaurant.is_open? %>
              Wait Time - <%= restaurant.most_recent_waittime.try(:estimated_waittime) || restaurant.base_alg_time %> minutes
            <% else %>
              Open at: <%= restaurant.will_be_open %>
            <% end %>
          </p>
        </div>
        <div id="restaurant-info-<%= restaurant.id %>" class="restaurant-info">
          <p><%= render partial: "waittime", locals: {restaurant: restaurant} %></p>
        </div>
      </div>
      <% end %>
  </div>
  <footer>
    <p>&copy; Ramen, Ho!</p>
  </footer>
</div>
