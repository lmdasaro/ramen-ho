<div class="content-wrapper">
  <div class="waitlist-header">
    <h1>Waitlist</h1>
      <%= form_for :waittime, url: waittimes_path, html: {id: "add-party-form"} do |f| %>
        <% if @waittime.errors.any? %>
          <div class="errors">
            <ul>
              <%= waittime.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.text_field :customer, id:"name", placeholder:"Name" %>
        <%= f.number_field :party_size, id:"party_size", placeholder:"Party Size" %>
        <%= f.telephone_field :phone, id:"phone_number", placeholder:"Phone Number" %>
        <%= f.submit "Add to Waitlist", id: "add-to-waitlist", disabled: true %>
      <% end %>
      <button id="add-party-button">Add Party</button>
    </div>
    <div class="admin-dashboard">
      <a href="/admins/dashboard"><%= current_admin.email %></a>
    </div>
    <div class="unlock">
      <input class="pin-input" type="text">
      <button class="pin-btn">Submit Pin</button>
      <button class="unlock-screen-btn">Unlock Screen</button>
      <button class="lock-screen-btn">Lock Screen</button>
      <div class="lock-status"></div>
    </div>
  </div>

<ul class="waitlist">
  <% @waittimes.each do |waittime| %>
    <%= render partial: 'waittimes/create_w_db', layout: false, locals: { waittime: waittime } %>
  <% end %>
</ul>

</div>

